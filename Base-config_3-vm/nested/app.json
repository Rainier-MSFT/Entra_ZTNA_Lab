{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SharedVmConfig": {
      "type": "object"
    },
    "vmName": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "modulesURL": {
      "type": "string"
    },
    "configurationFunction": {
      "type": "object"
    }
  },
  "variables": {
    "domainAdmin": "[concat(parameters('SharedVmConfig').shortDomainName,'\\',parameters('domainAdmin'))]"
  },
  "resources": [
    {
      "apiVersion": "2023-03-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('SharedVmConfig').vmSize]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('SharedVmConfig').localAdmin]",
          "adminPassword": "[parameters('SharedVmConfig').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('SharedVmConfig').serverOS]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "createOption": "Empty",
              "diskSizeGB": 1023,
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(concat('Microsoft.Storage/storageAccounts/',parameters('SharedVmConfig').storageAccountNamePrefix),'2017-06-01').primaryEndpoints.blob]"
          }
        }
      }
    },
    {
      "apiVersion": "2022-11-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/JoinDomain')]",
      "location": "[parameters('SharedVmConfig').location]",
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('SharedVmConfig').domainName]",
          "OUPath": null,
          "Options": "3",
          "Restart": "true",
          "User": "[variables('domainAdmin')]"
        },
        "protectedsettings": {
          "Password": "[parameters('SharedVmConfig').adminPassword]"
        }
      },
      "dependsOn": [
        "[parameters('vmName')]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/AppConfig')]",
      "apiVersion": "2022-11-01",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "protectedSettings": {
          "Items": {}
        },
        "settings": {
          "modulesUrl": "[concat(parameters('modulesURL'),'/AppConfig.ps1.zip')]",
          "sasToken": "[parameters('SharedVmConfig').SasToken]",
          "wmfVersion": "latest",
          "configurationFunction": "[parameters('configurationFunction').AppConfig]",
          "Properties": {
            "DomainName": "[parameters('SharedVmConfig').domainName]"
          }
        }
      }
    },
    {

      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/BGInfo')]",
      "apiVersion": "2022-11-01",
      "scale": null,
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {

        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "properties": []
        }

      }

    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/Antimalware')]",
      "apiVersion": "2022-11-01",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "IaaSAntimalware",
        "typeHandlerVersion": "1.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "AntimalwareEnabled": true,
          "Exclusions": {
            "Paths": "C:\\Users",
            "Extensions": ".txt",
            "Processes": "taskmgr.exe"
          },
          "RealtimeProtectionEnabled": "true",
          "ScheduledScanSettings": {
            "isEnabled": "true",
            "scanType": "Quick",
            "day": "7",
            "time": "120"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/XConfigs')]",
      "apiVersion": "2022-11-01",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'), '/extensions/joindomain')]",
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'), '/extensions/AppConfig')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.10",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "1",
        "settings": {
          "fileUris": [
            "https://raw.githubusercontent.com/Rainier-MSFT/Entra_ZTNA_Lab/main/Base-config_3-vm/resources/XConfigs.ps1"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File XConfigs.ps1 -domainAdmin ',parameters('SharedVmConfig').domainAdmin,' -adminPassword ',parameters('SharedVmConfig').adminPassword)]"
        },
        "protectedSettings": null
      }
    }
  ],
  "outputs": {}
}