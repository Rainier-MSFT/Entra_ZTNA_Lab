{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SharedVmConfig": {
      "type": "object"
    },
    "vmName": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    }
  },
  "variables": {
    "windows10Publisher": "MicrosoftWindowsDesktop",
    "windows10Offer": "[parameters('SharedVmConfig').clientOS]",
    "windows10Sku": "win10-22h2-entn",
    "windows11Publisher": "MicrosoftWindowsDesktop",
    "windows11Offer": "[parameters('SharedVmConfig').clientOS]",
    "windows11Sku": "win11-22h2-entn"
  },
  "resources": [
    {
      "apiVersion": "2023-03-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('SharedVmConfig').vmSize]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('SharedVmConfig').localAdmin]",
          "adminPassword": "[parameters('SharedVmConfig').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsDesktop",
            "offer": "[if(equals(parameters('SharedVmConfig').clientOS, 'windows-10'), variables('windows10Offer'), variables('windows11Offer'))]",
            "sku": "[if(equals(parameters('SharedVmConfig').clientOS, 'windows-10'), variables('windows10Sku'), variables('windows11Sku'))]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(concat('Microsoft.Storage/storageAccounts/',parameters('SharedVmConfig').storageAccountNamePrefix),'2017-06-01').primaryEndpoints.blob]"
          }
        }
      }
    },
    {
      "apiVersion": "2022-11-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/JoinDomain')]",
      "location": "[parameters('SharedVmConfig').location]",
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('SharedVmConfig').domainName]",
          "OUPath": null,
          "Options": "3",
          "Restart": "true",
          "User": "[parameters('SharedVmConfig').domainAdmin]"
        },
        "protectedsettings": {
          "Password": "[parameters('SharedVmConfig').adminPassword]"
        }
      },
      "dependsOn": [
        "[parameters('vmName')]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/BGInfo')]",
      "apiVersion": "2022-11-01",
      "scale": null,
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "properties": []
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/Antimalware')]",
      "apiVersion": "2022-11-01",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "IaaSAntimalware",
        "typeHandlerVersion": "1.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "AntimalwareEnabled": true,
          "Exclusions": {
            "Paths": "C:\\Users",
            "Extensions": ".txt",
            "Processes": "taskmgr.exe"
          },
          "RealtimeProtectionEnabled": "true",
          "ScheduledScanSettings": {
            "isEnabled": "true",
            "scanType": "Quick",
            "day": "7",
            "time": "120"
          }
        },
        "protectedSettings": null
      }
    }
  ],
  "outputs": {}
}